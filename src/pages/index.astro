---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'My Site',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero -->
  <Hero
    actions={[
      { variant: 'primary', text: 'Read the blog', href: '/blog' },
      { text: 'About me', href: '/about' },
    ]}
  >
    <Fragment slot="title">
      Welcome to <span class="text-accent dark:text-white">My Site</span>
    </Fragment>

    <Fragment slot="subtitle">
      A personal blog about blogging.
    </Fragment>
  </Hero>

  <!-- Latest Posts -->
  <BlogLatestPosts title="Latest posts" information="Recent writing from the blog." />
</Layout>
