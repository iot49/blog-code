---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';

const metadata = {
  title: 'About',
};
---

<Layout metadata={metadata}>
  <Hero tagline="About me">
    <Fragment slot="title">
      Hi, I'm <span class="text-accent dark:text-white">[Your Name]</span>
    </Fragment>

    <Fragment slot="subtitle">
      Welcome to my personal blog. I write about what's on my mind and what I'd like to remember.
      <br /><br />
      <!-- Edit this section with your own bio -->
      This is a placeholder for your biography. You can customize this page by editing the file in your content repository.
    </Fragment>
  </Hero>
</Layout>
