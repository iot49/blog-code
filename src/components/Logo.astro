---
import { SITE } from 'astrowind:config';
---

<span class="flex items-center gap-2 self-center">
  <svg width="28" height="28" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
    <!-- Matterhorn-style peak -->
    <polygon
      points="14,2 22,22 6,22"
      fill="currentColor"
      class="text-blue-600 dark:text-blue-400"
      style="fill: #2563eb;"></polygon>
    <polygon points="14,2 22,22 6,22" fill="#2563eb"></polygon>
    <!-- Snow cap -->
    <polygon points="14,2 17,10 11,10" fill="white" opacity="0.9"></polygon>
    <!-- Second smaller peak (right) -->
    <polygon points="21,8 26,22 16,22" fill="#1d4ed8" opacity="0.7"></polygon>
  </svg>
  <span
    class="self-center ml-1 rtl:ml-0 rtl:mr-1 text-2xl md:text-xl font-bold text-gray-900 whitespace-nowrap dark:text-white"
  >
    {SITE?.name}
  </span>
</span>
